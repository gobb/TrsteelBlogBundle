{% extends 'TrsteelAdminBundle::base.html.twig' %}

{% block trsteel_admin_content %}
    <h1>{% block title %}Categories{% endblock %}</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Added</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('trsteel_blog_backend_category_edit', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.title }}</td>
                <td>{% if category.createdat %}{{ category.createdat|date('Y-m-d H:i:s') }}{% endif%}</td>
                <td>{% if category.updatedat %}{{ category.updatedat|date('Y-m-d H:i:s') }}{% endif%}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('trsteel_blog_backend_category_edit', { 'id': category.id }) }}">Edit</a>
                        </li>
                        <li>
                            <a href="{{ path('trsteel_blog_backend_category_delete', { 'id' : category.id }) }}" onclick="return confirm('Are you sure?');">Delete</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('trsteel_blog_backend_category_add') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}